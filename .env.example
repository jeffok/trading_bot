
# ---------- Common ----------
APP_ENV=dev
LOG_LEVEL=INFO

# 运行时选择交易所：binance / bybit / paper
EXCHANGE=paper
EXCHANGE_CATEGORY=spot

SYMBOL=BTCUSDT
# Multi-symbol pool (comma/space separated)
SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT,ETHUSDT,SOLUSDT,BNBUSDT,XRPUSDT,ADAUSDT,DOGEUSDT,AVAXUSDT,LINKUSDT,OPUSDT,BCHUSDT
INTERVAL_MINUTES=15
MAX_CONCURRENT_POSITIONS=3
MIN_ORDER_USDT=50
AUTO_LEVERAGE_MIN=10
AUTO_LEVERAGE_MAX=20

# Scheduler tick：开发环境建议缩短（秒），生产建议 900 (15m)
STRATEGY_TICK_SECONDS=900

# 风控：硬止损（默认 3%）
HARD_STOP_LOSS_PCT=0.03

# ---------- Admin / Security ----------
ADMIN_TOKEN=change_me

# ---------- Database (MariaDB) ----------
DB_HOST=mariadb
DB_PORT=3306
DB_USER=alpha
DB_PASS=alpha_pass
DB_NAME=alpha_sniper

# ---------- Redis ----------
REDIS_URL=redis://redis:6379/0

# ---------- Telegram (optional) ----------
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ---------- Binance ----------
BINANCE_BASE_URL=https://api.binance.com
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_RECV_WINDOW=5000

# ---------- Bybit ----------
BYBIT_BASE_URL=https://api.bybit.com
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_RECV_WINDOW=5000

# ---------- Paper trading ----------
PAPER_STARTING_USDT=1000
PAPER_FEE_PCT=0.0004

# ---------- AI (online learning) ----------
AI_ENABLED=true
AI_WEIGHT=0.35
AI_LR=0.05
AI_L2=0.000001
AI_MIN_SAMPLES=50
AI_MODEL_KEY=AI_MODEL_V1

# ---------- Drills ----------
RUN_ONCE=false


# --- Milestone F (HA / Security)
# 多 token 支持（逗号分隔），用于轮换；若不设置则使用 ADMIN_TOKEN
ADMIN_TOKENS=change_me

# /admin IP 白名单（CIDR 或单 IP，逗号分隔）。为空则不启用。
# 示例：ADMIN_IP_ALLOWLIST=127.0.0.1/32,10.0.0.0/8
ADMIN_IP_ALLOWLIST=

# 高危操作二次确认（可选）
ADMIN_CONFIRM_REQUIRED=false
ADMIN_CONFIRM_CODE=

# Leader election（多实例 HA）
LEADER_ELECTION_ENABLED=true
LEADER_KEY_PREFIX=leader
LEADER_TTL_SECONDS=30
LEADER_RENEW_INTERVAL_SECONDS=10
LEADER_FOLLOWER_SLEEP_SECONDS=2
